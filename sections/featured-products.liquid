<section class="featured-products">
    <div class="container">
        <div class="featured-products__title">{{ section.settings.title }}</div>
        <div class="featured-products__grid">
            {% for product in collections[section.settings.collection].products %}
            <div class="featured-product">
                <div class="product-image">
                    <img 
                    src="{{ product.featured_image | image_url }}" 
                    alt="{{ product.title }}"
                    width="100%"
                    height="auto">
                </div>
                <div class="featured-product-title">{{ product.title }}</div>
                <p class="featured-product-price">{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="featured-products-btn">View Product</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Featured Products",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Section Title",
                "default": "Featured Products"
            },
            {
                "type": "collection",
                "id": "collection",
                "label": "Select Collection"
            }
        ]
    }
    {% endschema %}