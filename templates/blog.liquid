<div class=" blog-page">
    <h1>{{ blog.title }}</h1>
    <div class="blog-posts">
        {% for article in blog.articles %}
        <div class="blog-post">
            <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
            <p>{{ article.excerpt }}</p>
            <p><small>Posted on {{ article.published_at | date: '%B %d, %Y' }}</small></p>
        </div>
        {% endfor %}
    </div>
</div>